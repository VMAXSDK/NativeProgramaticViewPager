<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
   android:background="@android:color/white"
        android:id="@+id/rl_1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/blog_img"
                android:src="@drawable/vmx_blog"
                android:layout_width="140dp"
                android:layout_height="86dp" />
        </LinearLayout>
        <LinearLayout

            android:layout_margin="4dp"
            android:orientation="vertical"
            android:layout_toRightOf="@id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/blog_title"
                android:text="Your app monetization is now even more secure with the latest VMAX SDK"
                android:layout_margin="3dp"
                android:textSize="14dp"
                android:textColor="@color/initial_font_gotham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/blog_date"
                android:text="Tuesday March 21st, 2017 | Blog, Product"
                android:layout_margin="3dp"
                android:textSize="8dp"
                android:textColor="@color/blog_descp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
android:id="@+id/blog_author"
                android:textStyle="italic"
                android:text="by VMAX"
                android:layout_margin="3dp"
                android:textSize="16px"
                android:textColor="@color/blog_descp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>